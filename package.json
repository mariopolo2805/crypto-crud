{
  "name": "crypto-crud",
  "description": "A simple CRUD to view crypto currencies (technical test)",
  "license": "MIT",
  "author": "Mario Antonio Polo Daza <mariopolo2805@gmail.com>",
  "engines": {
    "node": ">=12"
  },
  "version": "0.1.0-snapshot.0",
  "scripts": {
    "ng": "ng",
    "clean": "rimraf dist && rimraf coverage",
    "start": "ng serve",
    "build": "ng build",
    "build:prod": "npm run clean && ng build --prod",
    "test": "ng test",
    "test:dev": "run-p test:coverage coverage",
    "test:ci": "ng test --sourceMap=false --browsers=ChromeHeadlessNoSandbox --codeCoverage=true --watch=false",
    "test:coverage": "npm run clean && ng test --codeCoverage=true --browsers=Chrome",
    "coverage": "http-server -c-1 -p 9875 ./coverage",
    "lint": "eslint --color -c .eslintrc.js --ext .ts ./src/app",
    "lint:fix": "eslint --color --fix -c .eslintrc.js --ext .ts ./src/app",
    "stylelint": "stylelint 'src/**/*.scss' --syntax scss -f verbose",
    "stylelint:fix": "stylelint 'src/**/*.scss' --syntax scss -f verbose --fix",
    "e2e": "ng e2e",
    "snapshot": "npm run build && node ./scripts/snapshot.js",
    "version:snapshot": "npm run version && git add package.json package-lock.json src/version.js CHANGELOG.md && git commit -m 'snapshot: update version' -n",
    "release": "node ./scripts/release.js",
    "version:release": "npm run version && npm run changelog && git add src/version.js CHANGELOG.md && git commit -m 'release: update version' -n",
    "changelog": "node ./scripts/changelog.js",
    "changelog:commit": "git add CHANGELOG.md src/version.js && git commit -m 'release: update CHANGELOG.md'",
    "version": "node ./scripts/version.js"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix .eslintrc.js --ext .ts ./src/app"
    ],
    "src/**/*.scss": [
      "stylelint --syntax=scss -f verbose --fix"
    ]
  },
  "private": true,
  "repository": {
    "type": "git",
    "url": "TODO"
  },
  "files": [
    "dist",
    "CHANGELOG.md",
    "README.md",
    "package.json"
  ],
